<link rel="preload" 
      href="/css/<%= prefix %>.css" 
      as="style"
      onload="this.onload=null;this.rel='stylesheet'">
<link rel="preload" href="<%= getJsAsset(prefix+'.js') %>" as="script">

<div class="content">
    <div class="profile-header">
        <h2><%= userData.login %></h2>
        <div class="registration-date">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <span>Дата регистрации:</span>
            <span><%= formatToRussianDateTimeCustom(userData.date_create) %></span>
        </div>
    </div>

    <div class="profile-content">
        <!-- Аватар -->
        <div>
            <div class="avatar-wrapper">
                <img src="/media/profile.png" alt="Аватар профиля">
            </div>
        </div>

        <!-- Информация профиля (только для чтения) -->
        <div>
            <div class="profile-info">
                <input type="hidden" name="id" id="userId" value="<%= userData.id %>">
                
                <div class="info-group">
                    <label for="email-display">Email</label>
                    <div class="info-field">
                        <span class="field-value" id="email-display"><%= userData.email %></span>
                    </div>
                </div>

                <div class="info-group">
                    <label for="name-display">Имя</label>
                    <div class="info-field">
                        <span class="field-value <%= !userData.name || userData.name.trim() === '' ? 'empty' : '' %>" id="name-display">
                            <%= userData.name && userData.name.trim() !== '' ? userData.name : 'Не указано' %>
                        </span>
                    </div>
                </div>

                <div class="info-group">
                    <label for="lastname-display">Фамилия</label>
                    <div class="info-field">
                        <span class="field-value <%= !userData.lastname || userData.lastname.trim() === '' ? 'empty' : '' %>" id="lastname-display">
                            <%= userData.lastname && userData.lastname.trim() !== '' ? userData.lastname : 'Не указано' %>
                        </span>
                    </div>
                </div>

                <!-- Кнопки действий -->
                <div class="buttons-group">
                    <button type="button" id="editProfileBtn" class="edit-profile-btn">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                        Редактировать профиль
                    </button>

                    <button type="button" id="changePasswordBtn" class="change-password-btn">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            <circle cx="12" cy="16" r="1"></circle>
                        </svg>
                        Сменить пароль
                    </button>

                    <button class="logout-btn" id="logoutBtn">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        Выйти из аккаунта
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно редактирования профиля -->
<div class="modal-overlay" id="editProfileModal">
    <div class="modal-content">
        <button class="close-modal" id="closeEditModal">&times;</button>
        
        <div class="modal-header">
            <h3>Редактирование профиля</h3>
            <p>Измените данные вашего профиля</p>
        </div>
        
        <div class="modal-body">
            <form id="editProfileForm" class="modal-form">
                <div class="form-group">
                    <label for="edit-email">Email *</label>
                    <input type="email" id="edit-email" name="email" 
                           required 
                           placeholder="Введите email"
                           value="<%= userData.email %>">
                    <small class="field-hint" style="display: block; margin-top: 4px; color: #666; font-size: 12px;">
                        Email используется для отправки уведомлений
                    </small>
                </div>
                
                <div class="form-group">
                    <label for="edit-name">Имя</label>
                    <input type="text" id="edit-name" name="name" 
                           placeholder="Введите ваше имя"
                           value="<%= userData.name %>">
                </div>
                
                <div class="form-group">
                    <label for="edit-lastname">Фамилия</label>
                    <input type="text" id="edit-lastname" name="lastname" 
                           placeholder="Введите вашу фамилию"
                           value="<%= userData.lastname %>">
                </div>
            </form>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="modal-btn cancel" id="cancelEdit">Отмена</button>
            <button type="submit" class="modal-btn save" form="editProfileForm" id="saveProfileBtn">Сохранить изменения</button>
        </div>
    </div>
</div>

<!-- Модальное окно смены пароля -->
<div class="modal-overlay" id="passwordModal">
    <div class="modal-content">
        <button class="close-modal" id="closePasswordModal">&times;</button>
        
        <div class="modal-header">
            <h3>Смена пароля</h3>
            <p>Введите текущий и новый пароль для изменения</p>
        </div>
        
        <div class="modal-body">
            <form id="passwordForm" class="modal-form">
                <div class="form-group">
                    <label for="newPassword">Новый пароль *</label>
                    <input type="password" id="newPassword" name="newPassword" 
                           required placeholder="Введите новый пароль"
                           minlength="6">
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword">Подтвердите новый пароль *</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" 
                           required placeholder="Повторите новый пароль">
                </div>
                
                <div class="password-requirements">
                    <p style="color: #666; font-size: 14px; margin-top: 16px;">
                        Пароль должен содержать минимум 6 символов
                    </p>
                </div>
            </form>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="modal-btn cancel" id="cancelPassword">Отмена</button>
            <button type="submit" class="modal-btn save" form="passwordForm">Сменить пароль</button>
        </div>
    </div>
</div>
<script src="<%= getJsAsset(prefix+'.js') %>"></script>