<link rel="preload" 
      href="/css/<%= prefix %>.css" 
      as="style"
      onload="this.onload=null;this.rel='stylesheet'">
<link rel="preload" href="<%= getJsAsset(prefix+'.js') %>" as="script">
<div class="content">
    <div class="d-flex col g-32">
        <div class="d-flex between a-center">
            <h2 class="modern"><%= userData.login %></h4>
            <div class="d-flex end g-16">
                <span class="modern">Дата регистрации:</span>
                <span class="modern"><%= userData.date_create.toISOString().slice(0, 10); %></span>
            </div>
        </div>
        <div class="d-flex between">
            <div class="d-flex col g-32 w-50">
                <div class="avatar-wrapper">
                    <img src="/media/profile.png" alt="profile avatart">
                </div>
            </div>
            <div class="d-flex col g-32 w-50">
                <div class="profile-form d-flex col g-16">
                    <div class="d-flex col g-8">
                        <input type="hidden" name="id" id="id" value="<%= userData.id %>">
                    </div>
                    <div class="d-flex col g-8">
                        <label for="email" class="modern">Email: </label>
                        <input class="modern" type="email" name="email" id="email" disabled value="<%= userData.email %>">
                    </div>
                    <div class="d-flex col g-8">
                        <label for="name" class="modern">Имя: </label>
                        <input class="modern" type="text" name="name" id="name" disabled value="<%= userData.name  %>" placeholder="Не указано">
                    </div>
                    <div class="d-flex col g-8">
                        <label for="lastname" class="modern">Фамилия: </label>
                        <input class="modern" type="text" name="lastname" id="lastname" disabled value="<%= userData.lastname  %>" placeholder="Не указано">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="<%= getJsAsset(prefix+'.js') %>"></script>