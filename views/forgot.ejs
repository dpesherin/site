<link rel="preload" 
      href="/css/<%= prefix %>.css" 
      as="style"
      onload="this.onload=null;this.rel='stylesheet'">
<link rel="preload" href="<%= getJsAsset(prefix+'.js') %>" as="script">
<div class="content">
    <div class="form-w-img">
        <div class="form-img-wrapper">
            <img src="/media/formbc.webp" alt="Фотостудия" fetchpriority="high">
        </div>
        <div class="form-fields">
            <h2 class="modern">Восстановление пароля</h2>
            <div class="row">
                <label for="login" class="modern">Введите логин:</label>
                <input type="text" name="login" id="login" class="modern">
            </div>
            <button class="orange-btn w-100" id="send">Отправить</button>
            <div class="d-flex center">
                <a href="/auth/login" class="modern">Авторизация</a>
            </div>
        </div>
    </div>
</div>
<script src="<%= getJsAsset(prefix+'.js') %>"></script>